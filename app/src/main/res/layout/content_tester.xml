<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tester"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.tagtalk.winemate.Tester"
    android:orientation="vertical"
    android:gravity="center"
    tools:showIn="@layout/activity_tester">

    <EditText
        android:id="@+id/number_of_user"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_shadow_round_green"
        android:gravity="center"
        android:hint="Number of users"
        android:text="50"
        android:inputType="numberDecimal"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/start_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_button_green_brighter"
        android:text="Start"
        android:textColor="@color/text_white"
        android:textAllCaps="false"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/clear_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rectangle_button_green_brighter"
        android:text="Clear"
        android:textColor="@color/text_white"
        android:textAllCaps="false"
        android:textSize="20sp"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/test_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
    </ScrollView>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Requests sent: "
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/requests_sent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Requests running: "
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/requests_running"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Requests completed: "
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/requests_completed"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
